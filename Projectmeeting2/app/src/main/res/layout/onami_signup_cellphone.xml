<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff8c00">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="휴   대   폰   인   증"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:textColor="#fffdfdfd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="  ? 허위 / 중복 가입을 막기
       위한 절차 입니다."
        android:gravity="left"
        android:textSize="30sp" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="  ? 휴대폰 번호는 절대 공개
      하지 않습니다."
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="수신번호  : "
            android:gravity="center"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/id_phoneNumber"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:hint=""/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_send"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="인 증 번 호 전 송"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="인증번호 입력  : "
            android:gravity="center"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/certificateNumber"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:hint=""/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_verify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="인       증"
        android:onClick="onClick"/>

</LinearLayout>