<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffff8c00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_MakeMeetingRoom"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/makemeetingwhite"
                android:layout_marginBottom="100dp"/> // 여백설정
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:background="@drawable/joinmeetingwhite"
                android:id="@+id/btn_JoinMeetingRoom"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="#ffffffff"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>