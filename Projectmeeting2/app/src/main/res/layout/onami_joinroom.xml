<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffff8c00"
    android:weightSum="1">
    <TextView
        android:textSize="25sp"
        android:text="1. 미팅룸 대표 아이디 입력"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#ffffff"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text=" 대표 닉네임 : "
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/id_UserInputMakerId"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:hint="닉네임을 입력하세요"
            android:textColorHint="#ffff8c00"/>
    </LinearLayout>
    <TextView
        android:textSize="25sp"
        android:text="2. 미팅룸 비밀번호 입력"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="  * 대표가 입력한 비밀번호를 입력해주세요"
        android:textSize="20sp"
        android:textColor="#ff0000"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text=" 비밀번호  : "
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/id_UserRoomPassword"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:password="true"
            android:numeric="integer"
            android:hint="비밀번호 입력"
            android:textColorHint="#ffff8c00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_agreeJoinRoom"
            android:text="Join Meeting Room"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/background_button_white"
            android:textColor="#ffff8c00"
            android:layout_gravity="center"/>
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_cancleJoinRoom"
            android:text="Cancle Join"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/background_button_white"
            android:textColor="#ffff8c00"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>